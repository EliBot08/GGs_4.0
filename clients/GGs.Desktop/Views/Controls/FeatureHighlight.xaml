<UserControl x:Class="GGs.Desktop.Views.Controls.FeatureHighlight"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="root"
             Margin="0,0,0,12">
    <Border Style="{DynamicResource ModernCard}" Padding="12" CornerRadius="8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Viewbox Width="24" Height="24" Margin="0,0,12,0">
                <Path Data="{Binding Icon, ElementName=root}" Fill="{DynamicResource PrimaryBrush}"/>
            </Viewbox>
            <StackPanel Grid.Column="1">
                <TextBlock Text="{Binding Title, ElementName=root}" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                <TextBlock Text="{Binding Description, ElementName=root}" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
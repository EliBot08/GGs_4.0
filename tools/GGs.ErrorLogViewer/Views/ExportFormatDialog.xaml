<Window x:Class="GGs.ErrorLogViewer.Views.ExportFormatDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Export Log Entries"
        Width="450"
        Height="350"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">
    
    <Window.Resources>
        <Style TargetType="RadioButton" BasedOn="{StaticResource DefaultRadioButtonStyle}">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
        
        <Style TargetType="CheckBox" BasedOn="{StaticResource DefaultCheckBoxStyle}">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Choose Export Format" 
                   FontSize="18" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,20"
                   Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>

        <!-- Format Selection -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="Export Format" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <RadioButton x:Name="CsvRadio" 
                                     Content="CSV (Comma Separated Values)" 
                                     IsChecked="True"
                                     ToolTip="Export as CSV file - compatible with Excel and other spreadsheet applications"/>
                        
                        <RadioButton x:Name="JsonRadio" 
                                     Content="JSON (JavaScript Object Notation)"
                                     ToolTip="Export as JSON file - structured data format, good for programmatic access"/>
                        
                        <RadioButton x:Name="XmlRadio" 
                                     Content="XML (Extensible Markup Language)"
                                     ToolTip="Export as XML file - structured markup format"/>
                        
                        <RadioButton x:Name="HtmlRadio" 
                                     Content="HTML (Web Page)"
                                     ToolTip="Export as HTML file - viewable in web browsers with styling"/>
                        
                        <RadioButton x:Name="TextRadio" 
                                     Content="Plain Text"
                                     ToolTip="Export as plain text file - simple format for viewing in any text editor"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Export Options" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="IncludeDetailsCheck" 
                                  Content="Include detailed information" 
                                  IsChecked="True"
                                  ToolTip="Include exception details, stack traces, and additional properties"/>
                        
                        <CheckBox x:Name="IncludePropertiesCheck" 
                                  Content="Include log properties" 
                                  IsChecked="True"
                                  ToolTip="Include custom properties and metadata from log entries"/>
                        
                        <CheckBox x:Name="UseCurrentThemeCheck" 
                                  Content="Use current theme for HTML export" 
                                  IsChecked="True"
                                  ToolTip="Apply the current dark/light theme to HTML export"/>
                    </StackPanel>
                </GroupBox>

                <!-- Format-specific info -->
                <Border x:Name="FormatInfoPanel" 
                        Background="{DynamicResource SystemControlBackgroundAccentBrush}" 
                        CornerRadius="4" 
                        Padding="12"
                        Opacity="0.1">
                    <TextBlock x:Name="FormatInfoText" 
                               Text="CSV format is ideal for importing into spreadsheet applications like Excel."
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button x:Name="ExportButton" 
                    Content="Export" 
                    Width="80" 
                    Height="32"
                    Margin="0,0,10,0"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="ExportButton_Click"/>
            
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Width="80" 
                    Height="32"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
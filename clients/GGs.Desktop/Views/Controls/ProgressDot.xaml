<UserControl x:Class="GGs.Desktop.Views.Controls.ProgressDot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="root"
             Width="16" Height="16">
    <UserControl.Resources>
        <SolidColorBrush x:Key="DotInactive" Color="#CBD5E1"/>
        <SolidColorBrush x:Key="DotActive" Color="#3B82F6"/>
        <SolidColorBrush x:Key="DotCompleted" Color="#10B981"/>
    </UserControl.Resources>
    <Grid>
        <Ellipse x:Name="Dot" Width="12" Height="12">
            <Ellipse.Style>
                <Style TargetType="Ellipse">
                    <Setter Property="Fill" Value="{StaticResource DotInactive}"/>
                    <Setter Property="Stroke" Value="Transparent"/>
                    <Setter Property="StrokeThickness" Value="0"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsCompleted, ElementName=root}" Value="True">
                            <Setter Property="Fill" Value="{StaticResource DotCompleted}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsActive, ElementName=root}" Value="True">
                            <Setter Property="Fill" Value="{StaticResource DotActive}"/>
                            <Setter Property="Width" Value="14"/>
                            <Setter Property="Height" Value="14"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Ellipse.Style>
        </Ellipse>
    </Grid>
</UserControl>
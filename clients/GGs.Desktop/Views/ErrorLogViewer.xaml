<Window x:Class="GGs.Desktop.Views.ErrorLogViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="GGs Error Log Viewer" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="LevelStyle">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Level}" Value="ERROR">
                    <Setter Property="Foreground" Value="Tomato"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Level}" Value="WARN">
                    <Setter Property="Foreground" Value="DarkOrange"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Level}" Value="OK">
                    <Setter Property="Foreground" Value="SeaGreen"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Level}" Value="INFO">
                    <Setter Property="Foreground" Value="DodgerBlue"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Level}" Value="DEBUG">
                    <Setter Property="Foreground" Value="Gray"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8" VerticalAlignment="Center">
            <TextBlock Text="Filter:" VerticalAlignment="Center"/>
            <CheckBox x:Name="ChkInfo" Content="Info" IsChecked="True"/>
            <CheckBox x:Name="ChkWarn" Content="Warn" IsChecked="True"/>
            <CheckBox x:Name="ChkError" Content="Error" IsChecked="True"/>
            <CheckBox x:Name="ChkDebug" Content="Debug"/>
            <Separator Width="12"/>
            <TextBox x:Name="TxtSearch" Width="240" ToolTip="Type to filter new entries"/>
            <Button x:Name="BtnPause" Content="Pause" Width="80"/>
            <Button x:Name="BtnClear" Content="Clear" Width="80"/>
            <Button x:Name="BtnExport" Content="Export" Width="80"/>
            <Button x:Name="BtnOpenFolder" Content="Open Logs Folder" Width="140"/>
            <TextBlock Text="Log folder:" VerticalAlignment="Center" Margin="16,0,4,0"/>
            <TextBlock x:Name="TxtFolder" VerticalAlignment="Center"/>
            <TextBlock Text="|" Margin="16,0,16,0" VerticalAlignment="Center" Foreground="Gray"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Rectangle Width="10" Height="10" Fill="Tomato" Margin="0,0,4,0"/>
                <TextBlock Text="Error" Margin="0,0,8,0"/>
                <Rectangle Width="10" Height="10" Fill="DarkOrange" Margin="0,0,4,0"/>
                <TextBlock Text="Warn" Margin="0,0,8,0"/>
                <Rectangle Width="10" Height="10" Fill="SeaGreen" Margin="0,0,4,0"/>
                <TextBlock Text="OK" Margin="0,0,8,0"/>
                <Rectangle Width="10" Height="10" Fill="DodgerBlue" Margin="0,0,4,0"/>
                <TextBlock Text="Info" Margin="0,0,8,0"/>
                <Rectangle Width="10" Height="10" Fill="Gray" Margin="0,0,4,0"/>
                <TextBlock Text="Debug"/>
            </StackPanel>
            <TextBlock x:Name="TxtStats" Margin="16,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <DataGrid x:Name="GridLogs"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="8"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  EnableRowVirtualization="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  ItemsSource="{Binding Entries}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Timestamp, StringFormat=yyyy-MM-dd HH:mm:ss.fff}" Header="Time" Width="170"/>
                <DataGridTextColumn Binding="{Binding Emoji}" Header=" " Width="40"/>
                <DataGridTextColumn Binding="{Binding Level}" Header="Level" Width="70" ElementStyle="{StaticResource LevelStyle}"/>
                <DataGridTextColumn Binding="{Binding Source}" Header="Source" Width="120"/>
                <DataGridTextColumn Binding="{Binding Message}" Header="Message" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>


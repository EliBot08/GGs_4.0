<UserControl x:Class="GGs.Desktop.Views.NetworkView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    
    <!-- Resources now defined in App.xaml for global access -->

    <Grid Background="#1a1d2e">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Header -->
                <TextBlock Text="Network Optimization" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="White"
                          Margin="0,0,0,20"/>
                
                <!-- Network Stats -->
                <Border Background="#252a3e" 
                        CornerRadius="12" 
                        Padding="20"
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="10">
                            <TextBlock Text="Latency" FontSize="12" Foreground="#8892a9"/>
                            <TextBlock Name="LatencyText" Text="-- ms" FontSize="24" FontWeight="Bold" Foreground="#00ff88"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="10">
                            <TextBlock Text="Download" FontSize="12" Foreground="#8892a9"/>
                            <TextBlock Name="DownloadText" Text="-- Mbps" FontSize="24" FontWeight="Bold" Foreground="#00d9ff"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Margin="10">
                            <TextBlock Text="Upload" FontSize="12" Foreground="#8892a9"/>
                            <TextBlock Name="UploadText" Text="-- Mbps" FontSize="24" FontWeight="Bold" Foreground="#ff00a8"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="3" Margin="10">
                            <TextBlock Text="Packet Loss" FontSize="12" Foreground="#8892a9"/>
                            <TextBlock Name="PacketLossText" Text="0%" FontSize="24" FontWeight="Bold" Foreground="#ffd700"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Quick Actions -->
                <Border Background="#252a3e" 
                        CornerRadius="12" 
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Quick Actions" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Foreground="#00d9ff"
                                  Margin="0,0,0,15"/>
                        
                        <WrapPanel>
                            <Button Name="FlushDnsBtn" Content="Flush DNS" Click="FlushDns_Click" Style="{StaticResource NetworkActionButton}"/>
                            <Button Name="ResetAdapterBtn" Content="Reset Adapter" Click="ResetAdapter_Click" Style="{StaticResource NetworkActionButton}"/>
                            <Button Name="OptimizeTcpBtn" Content="Optimize TCP" Click="OptimizeTcp_Click" Style="{StaticResource NetworkActionButton}"/>
                            <Button Name="TestSpeedBtn" Content="Speed Test" Click="TestSpeed_Click" Style="{StaticResource NetworkActionButton}"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>
                
                <!-- DNS Settings -->
                <Border Background="#252a3e" 
                        CornerRadius="12" 
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="DNS Configuration" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Foreground="#00d9ff"
                                  Margin="0,0,0,15"/>
                        
                        <RadioButton Name="AutoDns" Content="Automatic DNS" IsChecked="True" Foreground="White" Margin="0,5"/>
                        <RadioButton Name="GoogleDns" Content="Google DNS (8.8.8.8)" Foreground="White" Margin="0,5"/>
                        <RadioButton Name="CloudflareDns" Content="Cloudflare DNS (1.1.1.1)" Foreground="White" Margin="0,5"/>
                        <RadioButton Name="OpenDns" Content="OpenDNS (208.67.222.222)" Foreground="White" Margin="0,5"/>
                        
                        <Button Name="ApplyDnsBtn" Content="Apply DNS Settings" 
                               Click="ApplyDns_Click"
                               Margin="0,15,0,0"
                               HorizontalAlignment="Left"
                               Padding="15,8"
                               Background="#00ff88"
                               Foreground="#1a1d2e"
                               FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>

                <!-- Profiles -->
                <Border Background="#252a3e" 
                        CornerRadius="12" 
                        Padding="20"
                        Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="Profiles" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Foreground="#00d9ff"
                                  Margin="0,0,0,15"/>
                        <WrapPanel>
                            <ComboBox Name="CmbNetProfile" Width="260" Margin="0,0,10,0">
                                <ComboBoxItem Content="Balanced Default" IsSelected="True"/>
                                <ComboBoxItem Content="Low-Latency Gaming (Cloudflare)"/>
                                <ComboBoxItem Content="Restore Defaults"/>
                            </ComboBox>
                            <Button Name="BtnApplyProfile" Content="Apply Profile" Click="BtnApplyProfile_Click" Style="{StaticResource NetworkActionButton}"/>
                            <Button Name="BtnRollbackProfile" Content="Rollback Last" Click="BtnRollbackProfile_Click" Style="{StaticResource NetworkActionButton}"/>
                        </WrapPanel>
                        <TextBlock Name="TxtProfileStatus" Text="" Margin="0,10,0,0" Foreground="#8892a9"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

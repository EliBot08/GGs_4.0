<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Enhanced Dark Theme -->
    <ResourceDictionary x:Key="DarkTheme">
        <!-- Primary Colors -->
        <Color x:Key="ThemeBackgroundPrimaryColor">#FF1A1A1A</Color>
        <Color x:Key="ThemeBackgroundSecondaryColor">#FF2D2D2D</Color>
        <Color x:Key="ThemeBackgroundTertiaryColor">#FF3A3A3A</Color>
        <Color x:Key="ThemeBackgroundQuaternaryColor">#FF4A4A4A</Color>

        <!-- Text Colors -->
        <Color x:Key="ThemeTextPrimaryColor">#FFFFFFFF</Color>
        <Color x:Key="ThemeTextSecondaryColor">#FFB0B0B0</Color>
        <Color x:Key="ThemeTextTertiaryColor">#FF808080</Color>
        <Color x:Key="ThemeTextDisabledColor">#FF505050</Color>

        <!-- Accent Colors -->
        <Color x:Key="ThemeAccentPrimaryColor">#FF00D4FF</Color>
        <Color x:Key="ThemeAccentSecondaryColor">#FF0099FF</Color>
        <Color x:Key="ThemeAccentTertiaryColor">#FF0066FF</Color>
        <Color x:Key="ThemeAccentQuaternaryColor">#FF0044CC</Color>

        <!-- Status Colors -->
        <Color x:Key="ThemeSuccessColor">#FF00FF88</Color>
        <Color x:Key="ThemeWarningColor">#FFFF9900</Color>
        <Color x:Key="ThemeErrorColor">#FFFF4444</Color>
        <Color x:Key="ThemeInfoColor">#FF44AAFF</Color>

        <!-- Border and Surface Colors -->
        <Color x:Key="ThemeBorderColor">#FF555555</Color>
        <Color x:Key="ThemeBorderHoverColor">#FF777777</Color>
        <Color x:Key="ThemeBorderActiveColor">#FF00D4FF</Color>
        <Color x:Key="ThemeSurfaceColor">#FF2A2A2A</Color>
        <Color x:Key="ThemeSurfaceHoverColor">#FF3A3A3A</Color>

        <!-- Gradient Colors -->
        <Color x:Key="ThemeGradientStartColor">#FF00D4FF</Color>
        <Color x:Key="ThemeGradientMiddleColor">#FF0099FF</Color>
        <Color x:Key="ThemeGradientEndColor">#FF0066FF</Color>

        <!-- Convert to Brushes -->
        <SolidColorBrush x:Key="ThemeBackgroundPrimary" Color="{StaticResource ThemeBackgroundPrimaryColor}"/>
        <SolidColorBrush x:Key="ThemeBackgroundSecondary" Color="{StaticResource ThemeBackgroundSecondaryColor}"/>
        <SolidColorBrush x:Key="ThemeBackgroundTertiary" Color="{StaticResource ThemeBackgroundTertiaryColor}"/>
        <SolidColorBrush x:Key="ThemeBackgroundQuaternary" Color="{StaticResource ThemeBackgroundQuaternaryColor}"/>

        <SolidColorBrush x:Key="ThemeTextPrimary" Color="{StaticResource ThemeTextPrimaryColor}"/>
        <SolidColorBrush x:Key="ThemeTextSecondary" Color="{StaticResource ThemeTextSecondaryColor}"/>
        <SolidColorBrush x:Key="ThemeTextTertiary" Color="{StaticResource ThemeTextTertiaryColor}"/>
        <SolidColorBrush x:Key="ThemeTextDisabled" Color="{StaticResource ThemeTextDisabledColor}"/>

        <SolidColorBrush x:Key="ThemeAccentPrimary" Color="{StaticResource ThemeAccentPrimaryColor}"/>
        <SolidColorBrush x:Key="ThemeAccentSecondary" Color="{StaticResource ThemeAccentSecondaryColor}"/>
        <SolidColorBrush x:Key="ThemeAccentTertiary" Color="{StaticResource ThemeAccentTertiaryColor}"/>
        <SolidColorBrush x:Key="ThemeAccentQuaternary" Color="{StaticResource ThemeAccentQuaternaryColor}"/>

        <SolidColorBrush x:Key="ThemeSuccess" Color="{StaticResource ThemeSuccessColor}"/>
        <SolidColorBrush x:Key="ThemeWarning" Color="{StaticResource ThemeWarningColor}"/>
        <SolidColorBrush x:Key="ThemeError" Color="{StaticResource ThemeErrorColor}"/>
        <SolidColorBrush x:Key="ThemeInfo" Color="{StaticResource ThemeInfoColor}"/>

        <SolidColorBrush x:Key="ThemeBorder" Color="{StaticResource ThemeBorderColor}"/>
        <SolidColorBrush x:Key="ThemeBorderHover" Color="{StaticResource ThemeBorderHoverColor}"/>
        <SolidColorBrush x:Key="ThemeBorderActive" Color="{StaticResource ThemeBorderActiveColor}"/>
        <SolidColorBrush x:Key="ThemeSurface" Color="{StaticResource ThemeSurfaceColor}"/>
        <SolidColorBrush x:Key="ThemeSurfaceHover" Color="{StaticResource ThemeSurfaceHoverColor}"/>

        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="ThemeAccentGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="{StaticResource ThemeGradientStartColor}" Offset="0"/>
            <GradientStop Color="{StaticResource ThemeGradientMiddleColor}" Offset="0.5"/>
            <GradientStop Color="{StaticResource ThemeGradientEndColor}" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ThemeBackgroundGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource ThemeBackgroundPrimaryColor}" Offset="0"/>
            <GradientStop Color="{StaticResource ThemeBackgroundSecondaryColor}" Offset="1"/>
        </LinearGradientBrush>

        <!-- Glass Effect Brushes -->
        <LinearGradientBrush x:Key="ThemeGlassEffect" StartPoint="0,0" EndPoint="0,1" Opacity="0.1">
            <GradientStop Color="White" Offset="0"/>
            <GradientStop Color="Transparent" Offset="0.3"/>
            <GradientStop Color="Transparent" Offset="0.7"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </ResourceDictionary>

    <!-- Enhanced Light Theme -->
    <ResourceDictionary x:Key="LightTheme">
        <!-- Primary Colors -->
        <Color x:Key="ThemeBackgroundPrimaryColor">#FFFFFFFF</Color>
        <Color x:Key="ThemeBackgroundSecondaryColor">#FFF8F9FA</Color>
        <Color x:Key="ThemeBackgroundTertiaryColor">#FFF1F3F4</Color>
        <Color x:Key="ThemeBackgroundQuaternaryColor">#FFE8EAED</Color>

        <!-- Text Colors -->
        <Color x:Key="ThemeTextPrimaryColor">#FF1A1A1A</Color>
        <Color x:Key="ThemeTextSecondaryColor">#FF5F6368</Color>
        <Color x:Key="ThemeTextTertiaryColor">#FF80868B</Color>
        <Color x:Key="ThemeTextDisabledColor">#FFBDC1C6</Color>

        <!-- Accent Colors -->
        <Color x:Key="ThemeAccentPrimaryColor">#FF1976D2</Color>
        <Color x:Key="ThemeAccentSecondaryColor">#FF1565C0</Color>
        <Color x:Key="ThemeAccentTertiaryColor">#FF0D47A1</Color>
        <Color x:Key="ThemeAccentQuaternaryColor">#FF0A3D91</Color>

        <!-- Status Colors -->
        <Color x:Key="ThemeSuccessColor">#FF2E7D32</Color>
        <Color x:Key="ThemeWarningColor">#FFF57C00</Color>
        <Color x:Key="ThemeErrorColor">#FFD32F2F</Color>
        <Color x:Key="ThemeInfoColor">#FF1976D2</Color>

        <!-- Border and Surface Colors -->
        <Color x:Key="ThemeBorderColor">#FFDADCE0</Color>
        <Color x:Key="ThemeBorderHoverColor">#FFC4C7C5</Color>
        <Color x:Key="ThemeBorderActiveColor">#FF1976D2</Color>
        <Color x:Key="ThemeSurfaceColor">#FFFFFFFF</Color>
        <Color x:Key="ThemeSurfaceHoverColor">#FFF8F9FA</Color>

        <!-- Gradient Colors -->
        <Color x:Key="ThemeGradientStartColor">#FF1976D2</Color>
        <Color x:Key="ThemeGradientMiddleColor">#FF1565C0</Color>
        <Color x:Key="ThemeGradientEndColor">#FF0D47A1</Color>

        <!-- Convert to Brushes -->
        <SolidColorBrush x:Key="ThemeBackgroundPrimary" Color="{StaticResource ThemeBackgroundPrimaryColor}"/>
        <SolidColorBrush x:Key="ThemeBackgroundSecondary" Color="{StaticResource ThemeBackgroundSecondaryColor}"/>
        <SolidColorBrush x:Key="ThemeBackgroundTertiary" Color="{StaticResource ThemeBackgroundTertiaryColor}"/>
        <SolidColorBrush x:Key="ThemeBackgroundQuaternary" Color="{StaticResource ThemeBackgroundQuaternaryColor}"/>

        <SolidColorBrush x:Key="ThemeTextPrimary" Color="{StaticResource ThemeTextPrimaryColor}"/>
        <SolidColorBrush x:Key="ThemeTextSecondary" Color="{StaticResource ThemeTextSecondaryColor}"/>
        <SolidColorBrush x:Key="ThemeTextTertiary" Color="{StaticResource ThemeTextTertiaryColor}"/>
        <SolidColorBrush x:Key="ThemeTextDisabled" Color="{StaticResource ThemeTextDisabledColor}"/>

        <SolidColorBrush x:Key="ThemeAccentPrimary" Color="{StaticResource ThemeAccentPrimaryColor}"/>
        <SolidColorBrush x:Key="ThemeAccentSecondary" Color="{StaticResource ThemeAccentSecondaryColor}"/>
        <SolidColorBrush x:Key="ThemeAccentTertiary" Color="{StaticResource ThemeAccentTertiaryColor}"/>
        <SolidColorBrush x:Key="ThemeAccentQuaternary" Color="{StaticResource ThemeAccentQuaternaryColor}"/>

        <SolidColorBrush x:Key="ThemeSuccess" Color="{StaticResource ThemeSuccessColor}"/>
        <SolidColorBrush x:Key="ThemeWarning" Color="{StaticResource ThemeWarningColor}"/>
        <SolidColorBrush x:Key="ThemeError" Color="{StaticResource ThemeErrorColor}"/>
        <SolidColorBrush x:Key="ThemeInfo" Color="{StaticResource ThemeInfoColor}"/>

        <SolidColorBrush x:Key="ThemeBorder" Color="{StaticResource ThemeBorderColor}"/>
        <SolidColorBrush x:Key="ThemeBorderHover" Color="{StaticResource ThemeBorderHoverColor}"/>
        <SolidColorBrush x:Key="ThemeBorderActive" Color="{StaticResource ThemeBorderActiveColor}"/>
        <SolidColorBrush x:Key="ThemeSurface" Color="{StaticResource ThemeSurfaceColor}"/>
        <SolidColorBrush x:Key="ThemeSurfaceHover" Color="{StaticResource ThemeSurfaceHoverColor}"/>

        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="ThemeAccentGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="{StaticResource ThemeGradientStartColor}" Offset="0"/>
            <GradientStop Color="{StaticResource ThemeGradientMiddleColor}" Offset="0.5"/>
            <GradientStop Color="{StaticResource ThemeGradientEndColor}" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ThemeBackgroundGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource ThemeBackgroundPrimaryColor}" Offset="0"/>
            <GradientStop Color="{StaticResource ThemeBackgroundSecondaryColor}" Offset="1"/>
        </LinearGradientBrush>

        <!-- Glass Effect Brushes -->
        <LinearGradientBrush x:Key="ThemeGlassEffect" StartPoint="0,0" EndPoint="0,1" Opacity="0.05">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="Transparent" Offset="0.3"/>
            <GradientStop Color="Transparent" Offset="0.7"/>
            <GradientStop Color="Black" Offset="1"/>
        </LinearGradientBrush>
    </ResourceDictionary>

    <!-- Professional Control Styles -->
    
    <!-- Enhanced Button Style -->
    <Style x:Key="ActionButton" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource ThemeAccentGradient}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="20,12"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" Opacity="0.2" ShadowDepth="2" BlurRadius="8"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                            CornerRadius="8" Padding="{TemplateBinding Padding}">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.2" ShadowDepth="2" BlurRadius="8"/>
                        </Border.Effect>
                        <Grid>
                            <Rectangle Fill="{DynamicResource ThemeGlassEffect}" RadiusX="8" RadiusY="8"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeAccentSecondary}"/>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="{DynamicResource ThemeAccentPrimaryColor}" Opacity="0.4" ShadowDepth="2" BlurRadius="12"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeAccentTertiary}"/>
                            <Setter TargetName="border" Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeTextDisabled}"/>
                            <Setter TargetName="border" Property="Effect" Value="{x:Null}"/>
                            <Setter Property="Foreground" Value="{DynamicResource ThemeTextTertiary}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Enhanced Navigation Button Style -->
    <Style x:Key="NavButton" TargetType="RadioButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextSecondary}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="20,16"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                            Padding="{TemplateBinding Padding}" Margin="8,2">
                        <Border.RenderTransform>
                            <TranslateTransform x:Name="translateTransform"/>
                        </Border.RenderTransform>
                        <Grid>
                            <Rectangle x:Name="indicator" Width="4" Height="24" 
                                      Fill="{DynamicResource ThemeAccentPrimary}" 
                                      HorizontalAlignment="Left" VerticalAlignment="Center"
                                      Opacity="0" Margin="-12,0,0,0" RadiusX="2" RadiusY="2"/>
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center" Margin="8,0,0,0"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeSurfaceHover}"/>
                            <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimary}"/>
                            <Setter TargetName="border" Property="Margin" Value="12,2,8,2"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeAccentPrimary}"/>
                            <Setter TargetName="border" Property="Opacity" Value="0.1"/>
                            <Setter Property="Foreground" Value="{DynamicResource ThemeAccentPrimary}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter TargetName="indicator" Property="Opacity" Value="1"/>
                            <Setter TargetName="border" Property="Margin" Value="16,2,8,2"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Enhanced Card Style -->
    <Style x:Key="Card" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource ThemeBackgroundSecondary}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="24"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="4" BlurRadius="16"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderHover}"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="Black" Opacity="0.15" ShadowDepth="6" BlurRadius="20"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Enhanced TextBox Style -->
    <Style x:Key="ModernTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="{DynamicResource ThemeBackgroundTertiary}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimary}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorder}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="8">
                        <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource ThemeAccentPrimary}"/>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="{DynamicResource ThemeAccentPrimaryColor}" Opacity="0.3" ShadowDepth="0" BlurRadius="8"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource ThemeBorderHover}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource ThemeBackgroundQuaternary}"/>
                            <Setter Property="Foreground" Value="{DynamicResource ThemeTextDisabled}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Enhanced ProgressBar Style -->
    <Style x:Key="ModernProgressBar" TargetType="ProgressBar">
        <Setter Property="Background" Value="{DynamicResource ThemeBackgroundTertiary}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeAccentGradient}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Height" Value="8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Border Background="{TemplateBinding Background}" CornerRadius="4" ClipToBounds="True">
                        <Rectangle x:Name="PART_Track" Fill="{TemplateBinding Foreground}" 
                                  HorizontalAlignment="Left" RadiusX="4" RadiusY="4">
                            <Rectangle.RenderTransform>
                                <ScaleTransform ScaleX="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Value, Converter={StaticResource ProgressToScaleConverter}}"/>
                            </Rectangle.RenderTransform>
                        </Rectangle>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Enhanced ScrollBar Style -->
    <Style x:Key="ModernScrollBar" TargetType="ScrollBar">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Width" Value="12"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid>
                        <Border Background="{TemplateBinding Background}" CornerRadius="6"/>
                        <Track x:Name="PART_Track" IsDirectionReversed="True">
                            <Track.Thumb>
                                <Thumb BorderThickness="0" Opacity="0.5">
                                    <Thumb.Template>
                                        <ControlTemplate TargetType="Thumb">
                                            <Border Background="{DynamicResource ThemeTextTertiary}" 
                                                   CornerRadius="6"/>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                    <Thumb.Style>
                                        <Style TargetType="Thumb">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Opacity" Value="0.8"/>
                                                </Trigger>
                                                <Trigger Property="IsDragging" Value="True">
                                                    <Setter Property="Opacity" Value="1"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Thumb.Style>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Animation Resources -->
    <Storyboard x:Key="FadeInAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
    </Storyboard>

    <Storyboard x:Key="SlideInFromLeftAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" 
                        From="-50" To="0" Duration="0:0:0.4">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4"/>
    </Storyboard>

    <Storyboard x:Key="ScaleInAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                        From="0.8" To="1" Duration="0:0:0.3">
            <DoubleAnimation.EasingFunction>
                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                        From="0.8" To="1" Duration="0:0:0.3">
            <DoubleAnimation.EasingFunction>
                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
    </Storyboard>

</ResourceDictionary>
<UserControl x:Class="GGs.Desktop.Views.Controls.StatCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Style="{StaticResource ModernCard}" Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Icon -->
            <Border Grid.Column="1" Grid.RowSpan="3" 
                    Width="48" Height="48" 
                    Background="{StaticResource BackgroundBrush}" 
                    CornerRadius="12" 
                    VerticalAlignment="Center">
                <Path x:Name="IconPath" 
                      Width="24" Height="24" 
                      Fill="{StaticResource PrimaryBrush}" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center"/>
            </Border>

            <!-- Title -->
            <TextBlock x:Name="TitleText" 
                       Grid.Row="0" Grid.Column="0"
                       Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="14" 
                       FontWeight="Medium"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,0,12,4"/>

            <!-- Value -->
            <TextBlock x:Name="ValueText" 
                       Grid.Row="1" Grid.Column="0"
                       Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       Margin="0,0,12,4"/>

            <!-- Change Indicator -->
            <StackPanel Grid.Row="2" Grid.Column="0" 
                        Orientation="Horizontal">
                <Path x:Name="ChangeIcon" 
                      Width="16" Height="16" 
                      Margin="0,0,4,0"
                      VerticalAlignment="Center"/>
                <TextBlock x:Name="ChangeText" 
                           Text="{Binding Change, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontSize="14" 
                           FontWeight="Medium"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

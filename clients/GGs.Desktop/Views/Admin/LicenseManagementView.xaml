<UserControl x:Class="GGs.Desktop.Views.Admin.LicenseManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="User ID:" VerticalAlignment="Center"/>
            <TextBox Width="220" Margin="6,0,0,0" Text="{Binding SelectedUserId}"/>
            <TextBlock Text="Tier:" Margin="8,0,0,0" VerticalAlignment="Center"/>
            <ComboBox Width="140" Margin="6,0,0,0" ItemsSource="{Binding AvailableTiers}" SelectedItem="{Binding SelectedTier}"/>
            <TextBlock Text="Duration:" Margin="8,0,0,0" VerticalAlignment="Center"/>
            <ComboBox Width="140" Margin="6,0,0,0" ItemsSource="{Binding LicenseDurations}" SelectedItem="{Binding SelectedDuration}"/>
            <CheckBox Content="Admin Key" Margin="12,0,0,0" IsChecked="{Binding IsAdminKey}"/>
            <CheckBox Content="Developer Mode" Margin="8,0,0,0" IsChecked="{Binding IsDeveloperMode}"/>
            <CheckBox Content="Bind to this Device" Margin="8,0,0,0" IsChecked="{Binding BindToDevice}"/>
            <Button Content="Generate" Margin="12,0,0,0" Command="{Binding GenerateLicenseCommand}"/>
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Licenses}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="LicenseId" Binding="{Binding LicenseId}" Width="*"/>
                <DataGridTextColumn Header="UserId" Binding="{Binding UserId}" Width="150"/>
                <DataGridTextColumn Header="Tier" Binding="{Binding Tier}" Width="120"/>
                <DataGridTextColumn Header="Issued" Binding="{Binding IssuedUtc}" Width="150"/>
                <DataGridTextColumn Header="Expires" Binding="{Binding ExpiresUtc}" Width="150"/>
                <DataGridCheckBoxColumn Header="Admin" Binding="{Binding IsAdminKey}" Width="60"/>
                <DataGridTextColumn Header="Device" Binding="{Binding DeviceBindingId}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>


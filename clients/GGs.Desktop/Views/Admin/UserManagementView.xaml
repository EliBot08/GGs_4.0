<UserControl x:Class="GGs.Desktop.Views.Admin.UserManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <TextBlock Text="Email"/>
                <TextBox Width="220" Text="{Binding NewUserEmail}"/>
            </StackPanel>
            <StackPanel Margin="8,0,0,0">
                <TextBlock Text="Password"/>
                <PasswordBox x:Name="Pwd" Width="160"/>
            </StackPanel>
            <StackPanel Margin="8,0,0,0">
                <TextBlock Text="Role"/>
                <ComboBox Width="140" ItemsSource="{Binding AvailableRoles}" SelectedItem="{Binding NewUserRole}"/>
            </StackPanel>
            <Button Content="Create User" Margin="8,18,0,0" Click="CreateUser_Click"/>
            <Button Content="Refresh" Margin="8,18,0,0" Command="{Binding RefreshCommand}"/>
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="UserName" Binding="{Binding UserName}" Width="200"/>
                <DataGridTextColumn Header="Roles" Binding="{Binding Roles}" Width="200"/>
                <DataGridTemplateColumn Header="Actions" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Suspend" Command="{Binding DataContext.SuspendCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}"/>
                                <Button Content="Delete" Margin="6,0,0,0" Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>


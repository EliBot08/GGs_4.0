<Window x:Class="GGs.Desktop.Views.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GGs Update" Height="360" Width="560" WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="New update available" FontSize="20" FontWeight="SemiBold"/>

        <Border Grid.Row="1" Background="#1e1e2a" CornerRadius="8" Padding="12" Margin="0,12,0,12">
            <StackPanel>
                <TextBlock x:Name="TxtVersion" Text="Version: ?"/>
                <TextBlock x:Name="TxtChannel" Text="Channel: ?"/>
                <TextBlock Text="Release notes:" FontWeight="SemiBold" Margin="0,8,0,4"/>
                <ScrollViewer Height="140" VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="TxtNotes" TextWrapping="Wrap"/>
                </ScrollViewer>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0" VerticalAlignment="Center">
                    <CheckBox x:Name="ChkSilent" Content="Silent install" Margin="0,0,16,0"/>
                    <TextBlock Text="Bandwidth (KB/s):" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <Slider x:Name="SldBandwidth" Width="180" Minimum="0" Maximum="20480" SmallChange="128" LargeChange="512" TickFrequency="1024" IsSnapToTickEnabled="True"/>
                    <TextBlock x:Name="TxtBandwidth" Width="60" TextAlignment="Right" Margin="6,0,0,0"/>
                </StackPanel>

                <ProgressBar x:Name="Progress" Height="8" Minimum="0" Maximum="100" Visibility="Collapsed"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <ComboBox x:Name="CmbChannel" Width="120" Margin="0,0,8,0">
                <ComboBoxItem Content="stable"/>
                <ComboBoxItem Content="beta"/>
                <ComboBoxItem Content="dev"/>
            </ComboBox>
            <Button x:Name="BtnInstall" Content="Download and Install" Width="160" Margin="0,0,8,0"/>
            <Button x:Name="BtnClose" Content="Close" Width="100"/>
        </StackPanel>
    </Grid>
</Window>

